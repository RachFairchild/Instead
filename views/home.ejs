<%- include('partials/header') -%>

<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p>Welcome, <%= user.firstName %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <br><br>

          <% if(deletedTasks.length == 0){ %>
            <form action="/timer" method="POST">
            Let's 
              <select name="selectedTask" id="selected-tasks">
                  <% for(var i=0; i<tasks.length; i++) {%>
                    <% if (tasks[i].deleted == false) { %>
                      <option value=<%= tasks[i]._id%>><%= tasks[i].task%></option>
                    <% } %>
                  <% } %>
              </select>
            for 
              <span class="form-example">
                <label for="minutes"></label>
                <input type="number" name="minutes" id="minutes" value="5" max="180" required>
              </span>
            minutes.
              <span class="form-buttom">
                <input type="submit" value="Okay!">
              </span>
            </form>
          <% } else { %>
            Looks like you don't have any tasks. Let's add some!
          <% } %>
          <div class="form-buttom">
            <form action="/taskupdate" method="GET">
              <input type="submit" value="Add more tasks">
            </form>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>